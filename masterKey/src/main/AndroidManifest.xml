<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mistersofcode.masterkey" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <meta-data
        android:name="io.fabric.ApiKey"
        android:value="f7a7666b58053c41e89284649e92dd0c41c30788" />

    <application
        android:allowBackup="true"
        android:name="com.mistersofcode.masterkey.ParseApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mistersofcode.LaunchMain" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sign_In"
            android:label="@string/title_activity_sign__in"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddUserAccount"
            android:label="@string/title_activity_add__user__account"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.mistersofcode.SignUp" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrganizationTable"
            android:label="@string/title_activity_organization_table" >
        </activity>
        <activity
                android:name=".CardListActivity"
                android:label="@string/title_activity_card" >
        </activity>
    </application>

</manifest>
